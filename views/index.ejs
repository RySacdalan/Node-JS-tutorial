<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head")%>
<body>
    
    <%- include("./partials/nav")%>

    <div class="blogs content">
        <h2>All Blogs</h2>

        <% if(blogs.length > 0) {%>
            <% blogs.forEach( blog => { %>
                <h3 class="title">Title: <%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            <% }) %>
        <% } else {%>
            <h3>No Blogs to display...</h3>
        <% } %>

    </div>

    <%- include("./partials/footer")%>
</body>
</html>